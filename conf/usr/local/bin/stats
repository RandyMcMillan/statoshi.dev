#!/bin/bash

for ((i=1;i<=$#;i++));
do

    if [ ${!i} = "-s" ]
    then ((i++))
        var1=${!i};

    elif [ ${!i} = "-log" ];
    then ((i++))
        logFile=${!i};

    elif [ ${!i} = "-x" ];
    then ((i++))
        var2=${!i};

    elif [ ${!i} = "-p" ];
    then ((i++))
        var3=${!i};

    elif [ ${!i} = "-b" ];
    then ((i++))
        var4=${!i};

    elif [ ${!i} = "-l" ];
    then ((i++))
        var5=${!i};

    elif [ ${!i} = "-a" ];
    then ((i++))
        var6=${!i};
    else
        echo - $1 else working
    fi

done;

# Execute on the most recent composed image
D_ID1=$(echo $(docker ps | awk '{print $1}' | awk 'NR==2'))
echo $D_ID1
echo "./docker/cli-exec.sh"
#docker exec -it $D_ID1 sh -c  "ls" \
docker exec -it $D_ID1 sh -c  "/usr/local/bin/bitcoin-cli help"
