#!/bin/bash
# Execute on the most recent composed image
if hash docker 2>/dev/null; then

STATS_ID=$(echo $(docker ps | awk '/stats/'|awk ' {print $1}' | awk 'NR==1'))
export STATS_ID
echo STATS_ID: $STATS_ID

STATS_IMAGE=$(echo $(docker ps | awk '/stats/'|awk ' {print $2}' | awk 'NR==1'))
export STATS_IMAGE
echo STATS_TAG: $STATS_TAG

docker exec -it $STATS_ID sh -c  "tail -f ~/.bitcoin/debug.log"

else
    echo
    [ -d ~/.bitcoin ] && tail -f ~/.bitcoin/debug.log || echo 'Your ~/.bitcoin datadir is somewhere else...'
fi
